<uicfg desc="单位管理列表">
	<rownum type="boolean">true</rownum>
	<objectName>businessObject</objectName>
	<orderBy>sortOrder asc</orderBy>
	<editable type="object">false</editable>
	<showCopyButton type="object">false</showCopyButton>
	<showDeleteButton type="object">false</showDeleteButton>
	<masterColumnId>code</masterColumnId>
	<allowPage type="boolean">false</allowPage>
    <bodyStyle>border-width:1px 0 0 1px;</bodyStyle>
	<statusCtrl>
		<field>valid</field>
		<value>1</value>
		<editable type="boolean">false</editable>
		<text>有效</text>
	</statusCtrl>
	<store>
		<xtype>liontreestore</xtype>
		<autoLoad type="object">false</autoLoad>
		<parentFieldName>parent</parentFieldName>
		<leafFieldName>leaf</leafFieldName>
		<url>prms/listPlatorganization.html</url>
		<fields>
			<name>id</name>
		</fields>
		<fields>
			<name>name</name>
		</fields>
		<fields>
			<name>platCenter.platName</name>
		</fields>
		<fields>
			<name>code</name>
		</fields>
		<fields>
			<name>sapCode</name>
		</fields>
		<fields>
			<name>parent</name>
		</fields>
		<fields>
			<name>organiztionType</name>
		</fields>
		<fields>
			<name>valid</name>
		</fields>
		<fields>
			<name>sortOrder</name>
		</fields>
		<fields>
			<name>leaf</name>
			<convert type="object">function(v) {if(v)return '1'; else return '0';}</convert>
		</fields>
		<fields>
			<name>description</name>
		</fields>
	</store>
	<sm>
		<xtype>checkboxsm</xtype>
		<singleSelect type="boolean">false</singleSelect>
		<ctrlKeyPress type="boolean">false</ctrlKeyPress>
	</sm>
	<cm>
		<defaults>
			<sortable type="boolean">true</sortable>
		</defaults>
		<columns>
			<id>code</id>
			<header>编码</header>
			<dataIndex>code</dataIndex>
		</columns>
		<columns>
			<header>名称</header>
			<dataIndex>name</dataIndex>
			<editor>
				<xtype>liontextfield</xtype>
			</editor>
		</columns>
		<columns>
			<header>分中心</header>
			<dataIndex>platCenter.platName</dataIndex>
		</columns>
		<columns>
			<header>类别</header>
			<dataIndex>organiztionType</dataIndex>
			<keyType>sys_mine_type</keyType>
			<editor>
				<xtype>lioncombobox</xtype>
				<keyType>sys_mine_type</keyType>
			</editor>
		</columns>
		<columns>
			<header>排序</header>
			<dataIndex>sortOrder</dataIndex>
			<editor>
				<xtype>lionnumberfield</xtype>
			</editor>
		</columns>
		<columns>
			<header>描述</header>
			<width type="object">150</width>
			<dataIndex>description</dataIndex>
			<editor>
				<xtype>liontextfield</xtype>
			</editor>
		</columns>
		<columns>
			<header>是否有效</header>
			<dataIndex>valid</dataIndex>
			<keyType>cims_effective</keyType>
			<editor>
				<xtype>lioncombobox</xtype>
				<keyType>cims_effective</keyType>
			</editor>
		</columns>
	</cm>
</uicfg>
