<uicfg desc="创新平台管理列表">
    <rownum type="boolean">true</rownum>
    <objectName>businessObject</objectName>
    <orderBy>platCode asc, grade asc</orderBy>
    <editable type="object">false</editable>
    <showCopyButton type="object">false</showCopyButton>
    <showEditButton type="object">Ext.isAllowed('rpms_researchplat_edit')</showEditButton>
    <masterColumnId>platCode</masterColumnId>
    <allowPage type="boolean">false</allowPage>
    <statusCtrl>
        <field>valid</field>
        <value>1</value>
        <editable type="boolean">false</editable>
        <text>有效</text>
    </statusCtrl>
    <store>
        <xtype>liontreestore</xtype>
        <parentFieldName>parent</parentFieldName>
        <leafFieldName>leaf</leafFieldName>
        <url>rpms/listResearchPlat.html</url>
        <baseParams>
			<hql type="object">" and obj.valid='1'"</hql>
		</baseParams>
        <fields>
            <name>id</name>
        </fields>
        <fields>
            <name>platCode</name>
        </fields>
        <fields>
            <name>platName</name>
        </fields>
        <fields>
            <name>organization.id</name>
        </fields>
        <fields>
            <name>organization.name</name>
        </fields>
        <fields>
            <name>parent</name>
        </fields>
        <!--
        <fields>
            <name>hierarchy</name>
        </fields>
        -->
        <fields>
            <name>grade</name>
        </fields>
        <fields>
            <name>specialty.id</name>
        </fields>
        <fields>
            <name>specialty.specialtyName</name>
        </fields>
        <fields>
            <name>approvalDept</name>
        </fields>
        <fields>
            <name>approvalTime</name>
        </fields>
        <fields>
            <name>fileCode</name>
        </fields>    
        <fields>
            <name>platType</name>
        </fields>
        <fields>
            <name>description</name>
        </fields>
        <fields>
            <name>valid</name>
        </fields>
        <fields>
            <name>remark</name>
        </fields>
        <fields>
            <name>children</name>
        </fields>
    </store>
    <sm>
        <xtype>checkboxsm</xtype>
        <singleSelect type="boolean">false</singleSelect>
    </sm>
    <cm>
        <defaults>
            <sortable type="boolean">true</sortable>
        </defaults>
        <columns>
            <id>platCode</id>
            <header>机构编号</header>
            <dataIndex>platCode</dataIndex>
            <width type="integer">70</width>
        </columns>
        <columns>
            <header>机构名称</header>
            <dataIndex>platName</dataIndex>
            <width type="integer">170</width>
        </columns>
        <!--
        <columns>
            <header>创新层级</header>
            <dataIndex>hierarchy</dataIndex>
            <keyType>rpms_innovation_level</keyType>
            <width type="integer">50</width>
            <hidden type="object">true</hidden>
        </columns>
        -->
        <columns>
            <header>单位</header>
            <dataIndex>organization.name</dataIndex>
            <hidden type="object">true</hidden>
        </columns>
        <columns>
            <header>等级</header>
            <dataIndex>grade</dataIndex>
            <keyType>rpms_grade</keyType>
            <width type="integer">55</width>
        </columns>
        <columns>
        <header>专业</header>
            <dataIndex>specialty.specialtyName</dataIndex>
            <width type="integer">70</width>
        </columns>
        <columns>
            <header>批准部门</header>
            <dataIndex>approvalDept</dataIndex>
            <width type="integer">135</width>
        </columns>
        <columns>
            <header>批准时间</header>
            <dataIndex>approvalTime</dataIndex>
            <width type="integer">60</width>
        </columns>
        <columns>
            <header>文件名称编号</header>
            <dataIndex>fileCode</dataIndex>
            <width type="integer">70</width>
        </columns>
        <columns>
            <header>平台类型</header>
            <dataIndex>platType</dataIndex>
            <keyType>rpms_plat_type</keyType>
            <hidden type="object">true</hidden>
        </columns>
        <columns>
            <header>是否有效</header>
            <dataIndex>valid</dataIndex>
            <keyType>cims_effective</keyType>
            <width type="integer">50</width>
        </columns>
        <columns>
            <header>平台描述</header>
            <dataIndex>description</dataIndex>
            <hidden type="object">true</hidden>
        </columns>
        <columns>
            <header>备注</header>
            <dataIndex>remark</dataIndex>
            <hidden type="object">true</hidden>
        </columns>
        <columns>
            <header><![CDATA[<img src='images/portal/icon/department.gif' height='11' alt='新增下级' title='新增下级'/> 新增下级]]></header>
            <dataIndex>dataOfResearchPlat</dataIndex>
            <hidden type="object">this.runMode == '2'</hidden>
            <width type="integer">60</width>
            <isPrint type="boolean">false</isPrint>
            <align>center</align>
            <xaction>rpms_researchplat_add</xaction>
            <renderer type="object"><![CDATA[
                function(){
                    return "<a href='javascript:void(0)'><img src='images/portal/icon/department.gif' title='新增下级' alt='新增下级'/></a>";
                }]]>
            </renderer>
        </columns>
    </cm>
</uicfg>