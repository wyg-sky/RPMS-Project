<uicfg desc="创新平台管理查询表单">
	<columns type="integer">4</columns>
	<autoHeight type="boolean">true</autoHeight>
	<defaultFunction type="object">this.manager.query</defaultFunction>
	<defaultScope type="object">this.manager</defaultScope>
	<items>
		<xtype>liontextfield</xtype>
		<fieldLabel>机构编号</fieldLabel>
		<name>platCode</name>
		<allowBlank type="boolean">true</allowBlank>
	</items>
	<items>
		<xtype>liontextfield</xtype>
		<fieldLabel>机构名称</fieldLabel>
		<name>platName</name>
		<allowBlank type="boolean">true</allowBlank>
	</items>
	<items>
		<xtype>lioncombobox</xtype>
		<fieldLabel>等级</fieldLabel>
	    <keyType>rpms_grade</keyType>
		<name>grade</name>
		<allowBlank type="boolean">true</allowBlank>
	</items>
	<items>
		<xtype>lioncombobox</xtype>
        <fieldLabel>是否有效</fieldLabel>
        <name>valid</name>
        <keyType>cims_effective</keyType>
        <editable type="object">true</editable>
		<allowBlank type="boolean">true</allowBlank>
	</items>
</uicfg>
