<uicfg desc="消息类型管理编辑表单">
	<loadtUrl>system/loadNoticeType.html</loadtUrl>
	<submitUrl>system/saveNoticeType.html</submitUrl>
	<objectName>businessObject</objectName>
	<columns type="object">2</columns>
	<height type="integer">200</height>
	<items>
		<xtype>lionhiddenfield</xtype>
		<name>id</name>
		<hidden type="object">true</hidden>
		<allowBlank type="object">false</allowBlank>
	</items>
	<items>
		<xtype>liontextfield</xtype>
		<name>code</name>
		<fieldLabel>编码</fieldLabel>
		<allowBlank type="boolean">false</allowBlank>
	</items>
	<items>
		<xtype>liontextfield</xtype>
		<name>name</name>
		<fieldLabel>名称</fieldLabel>
		<allowBlank type="boolean">false</allowBlank>
	</items>
	<items>
		<xtype>lioncombobox</xtype>
		<hiddenName>type</hiddenName>
		<fieldLabel>类型</fieldLabel>
		<keyType>sys_notice_type</keyType>
		<allowBlank type="boolean">false</allowBlank>
	</items>
	<items>
		<xtype>liontextfield</xtype>
		<name>point</name>
		<fieldLabel>指向</fieldLabel>
	</items>
	<items>
		<xtype>lionreadonlyfield</xtype>
		<fieldLabel>创建人</fieldLabel>
		<propertyName>createUser</propertyName>
		<hiddenName>id</hiddenName>
		<hiddenDisplayName>userName</hiddenDisplayName>
		<value type="object">
			{"value" : FW.userId, "text" : FW.userName}
		</value>
	</items>
	<items>
		<xtype>liontextfield</xtype>
		<name>createTime</name>
		<readOnly type="boolean">true</readOnly>
		<fieldLabel>创建时间</fieldLabel>
		<value type="object">new Date().format('Y-m-d H:i:s')</value>
	</items>
	<items>
		<xtype>lionreadonlyfield</xtype>
		<fieldLabel>修改人</fieldLabel>
		<propertyName>modifyUser</propertyName>
		<hiddenName>id</hiddenName>
		<hiddenDisplayName>userName</hiddenDisplayName>
		<value type="object">
			{"value" : FW.userId, "text" : FW.userName}
		</value>
	</items>
	<items>
		<xtype>liontextfield</xtype>
		<name>modifyTime</name>
		<readOnly type="boolean">true</readOnly>
		<fieldLabel>修改时间</fieldLabel>
		<value type="object">new Date().format('Y-m-d H:i:s')</value>
	</items>
	<items>
		<xtype>liontextarea</xtype>
		<name>description</name>
		<fieldLabel>描述</fieldLabel>
		<columnWidth type="integer">2</columnWidth>
	</items>
</uicfg>